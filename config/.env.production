# 운영 환경 설정 파일
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# 운영 환경 API 설정
API_HOST=0.0.0.0
API_PORT=8000
METRICS_PORT=8001
SSL_ENABLED=true

# 운영 환경 MLflow 설정
MLFLOW_TRACKING_URI=http://mlflow-prod:5000
MLFLOW_EXPERIMENT_NAME=smart_factory_prod
USE_MLFLOW=true
REGISTER_MODEL=true

# 운영 환경 데이터베이스 설정
DB_HOST=mysql-prod
DB_PORT=3306
DB_NAME=smart_factory_prod
DB_USER=prod_user
DB_PASSWORD=highly_secure_password_here

# 완전한 학습을 위한 설정
EPOCHS=300
PATIENCE=15
BATCH_SIZE=64

# 모니터링 임계값 설정 
DRIFT_THRESHOLD=0.05
PERFORMANCE_THRESHOLD=0.8
ANOMALY_THRESHOLD=0.15

# 운영 환경 알림 설정
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/production/webhook
EMAIL_NOTIFICATIONS=true

# 보안 강화 설정
SECRET_KEY=very_long_and_secure_random_key_for_production